<Window x:Name="EC2Event_Monitor" x:Class="AWSMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EC2 Event Monitor" Height="504.52" Width="777" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="96*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="ProfilesComboBox" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Width="188"/>
        <Label Content="Profiles" HorizontalAlignment="Left" Margin="21,0,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="RegionsCombobox" HorizontalAlignment="Left" Margin="229,27,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Content="Regions" HorizontalAlignment="Left" Margin="229,1,0,0" VerticalAlignment="Top"/>
        <Button x:Name="EC2EventScanButton" Content="ScanProfilesforEvents" HorizontalAlignment="Right" Margin="0,0,34.4,18.8" Width="131" Height="22" VerticalAlignment="Bottom" Click="EC2EventScanButton_Click" Grid.Column="1"/>
        <DataGrid x:Name="DaGrid" Margin="10,63,10.4,68.8" Grid.ColumnSpan="2">
        </DataGrid>
        <ProgressBar x:Name="ProgressBar1" HorizontalAlignment="Left" Margin="268,0,0,9.8" Width="121" Height="22" VerticalAlignment="Bottom"/>
        <Label x:Name="ProcessingLabel" Content="." HorizontalAlignment="Left" Margin="54,0,0,37.8" Width="530" Grid.ColumnSpan="2" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
